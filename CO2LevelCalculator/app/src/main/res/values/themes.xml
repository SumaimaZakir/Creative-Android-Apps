<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CO2Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/eco_primary</item>
        <item name="colorPrimaryVariant">@color/eco_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/eco_secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/eco_background</item>

        <!-- Status bar and navigation bar colors -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/eco_primary_dark</item>
        <item name="android:navigationBarColor">@color/eco_background</item>
    </style>
</resources>
