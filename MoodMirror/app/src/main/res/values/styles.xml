<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base App Theme -->
    <style name="Theme.MoodMirror" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- Mood Button Style -->
    <style name="MoodButtonStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">#30FFFFFF</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.MoodMirror.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.MoodMirror</item>
    </style>

    <!-- Reflection Activity Theme -->
    <style name="Theme.MoodMirror.Reflection" parent="Theme.MoodMirror">
        <item name="android:navigationBarColor">@color/mood_reflection_nav</item>
        <item name="android:statusBarColor">@color/mood_reflection_nav</item>
    </style>
</resources>